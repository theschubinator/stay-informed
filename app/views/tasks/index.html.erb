<h1> <%= current_user.email %> Tasks</h1>

<%= link_to "New Task", new_user_task_path(current_user) %>

<ol>
<% @tasks.each do |task| %>
  <li>
  <%= form_for task, url: user_task_path(current_user, task) do |f| %>
    <%= f.check_box :complete %>
    <%= f.submit "Complete Task" %>
  <% end %>




  Name: <%= task.name %><br>
  Categories <%= list_task_categories(task) %><br>
  Description: <%= task.description %><br>
  Completed?: <%= task.complete %><br>
  Due Date: <%= task.formatted_date(task.due_date) %><br> 
  </li><br>
<% end %>
</ol>