<h1> Welcome, <%= current_user.email %> </h1>

<%= render "users/admin_tools" if current_user.admin? %>

<p>View Tasks By Category: <%= render "category_links" %></p>

<p><b><%= render "overdue_task_message" %></b></p>

<%= link_to "New Task", new_user_task_path(current_user), id: "new_task_link" %>

<h3 id="current_tasks">Current Tasks</h3>
<%= render "current_tasks" %>

<h3 id="completed_tasks">Completed Tasks</h3>
<%= render "completed_tasks" %>

<%= link_to "View All Completed Tasks", user_completed_tasks_path(current_user), id: "view_completed_tasks" %> 
