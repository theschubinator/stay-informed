<h1>Create New Task</h1>

<%= form_for(@task, url: user_tasks_path) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, size: "40" %><br><br>

  Categories: <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>

  <%= f.label :description %><br>
  <%= f.text_area :description, size: "40x10" %><br><br>

  <%= f.label :due_date %>:
  <%= f.datetime_select :due_date, ampm: true, default: 5.days.from_now %> <br><br>

  <%= f.submit %>
<% end %>