  <%= f.label :name %>
  <%= f.text_field :name, size: "34" %><br><br>
  <% if current_user.categories.length > 0 %>
    Categories: <%= f.collection_check_boxes :category_ids, current_user.categories.uniq, :id, :name %><br><br>
  <% end %>
  
  <div id="rendered_new_category_form">
    <p>New Category:
    <%= f.fields_for :categories, @task.categories.build do |category| %>
      <%= category.text_field :name, size: "25" %>
    <% end %></p>
  </div>

  <a href="#" class="render_new_category_textarea" id="more_categories" onclick="renderNewCategoryField(); return false">Add Another Category</a><br><br>
  

  <%= f.label :description %><br>
  <%= f.text_area :description, size: "40x2" %><br><br>

  <%= f.label :due_date %>:
  <%= f.datetime_select :due_date, ampm: true, default: 1.hour.from_now %> <br><br>

  <p>Additional Details</p>
  <%= f.fields_for :join_description, @task.category_tasks.build do |category_task| %>
  <%= category_task.text_area :description, placeholder: @task.category_tasks.first.description, size: "40x2" %><br><br>
  <% end %>

  <%= f.submit %>